<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BottomNavFragments.BottomPersonFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/profileBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_arrow_arrow"
                android:rotation="180"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/profileNnotificationBell"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/bell1" />

        <TextView
            android:id="@+id/notificationCounterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:text="1"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/profileNnotificationBell"
            android:layout_marginTop="50dp"
            android:src="@drawable/user"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/changeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />
        <LinearLayout
            android:id="@+id/profileLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="80dp"
            android:layout_below="@id/changeText"
            >

            <EditText
                android:id="@+id/profileFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:paddingVertical="20dp"
                />

            <EditText
                android:id="@+id/profileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="16sp"
                android:enabled="false"
                android:editable="false"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:paddingVertical="20dp"
                />

            <EditText
                android:id="@+id/profilePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="16sp"
                android:enabled="false"
                android:editable="false"
                android:inputType="textPassword"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:paddingVertical="20dp"
                />

            <EditText
                android:id="@+id/profilePhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PhoneNumber"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:paddingVertical="20dp"
                />

            <EditText
                android:id="@+id/profileAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textSize="16sp"

                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:paddingVertical="20dp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/profileSaveButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoutText"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/splash_btn_background"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/logoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileLinear"
            android:layout_marginStart="45dp"
            android:text="LogOut?"
            android:textColor="@color/blue"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

</ScrollView>