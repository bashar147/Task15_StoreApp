<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ForgetPasswordFragment"
    android:background="@color/semi_white"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="50dp"
    android:background="@color/like_white"
    >

    <TextView
        android:id="@+id/forgetText"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="in order to get your account back, we will send a verification code to your email."
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/clearsans_bold"
        android:layout_marginHorizontal="33dp"
        />

    <EditText
        android:id="@+id/forget_EmailAndCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:textColorHint="@color/red"
        android:paddingVertical="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        />

    <EditText
        android:id="@+id/forget_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:textColorHint="@color/red"
        android:paddingVertical="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:visibility="gone"
        />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"

        >

        <Button
            android:id="@+id/forgetSendCodeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/splash_btn_background"
            android:layout_gravity="center"
            android:text="Send Code"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/forgetCheckButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/splash_btn_background"
            android:layout_gravity="center"
            android:text="Send Code"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/forgetChangeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/splash_btn_background"
            android:layout_gravity="center"
            android:text="Send Code"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            />


    </RelativeLayout>



</LinearLayout>


</FrameLayout>