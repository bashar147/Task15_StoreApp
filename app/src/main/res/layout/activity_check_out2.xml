<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CheckOutActivity"
    android:background="@color/semi_white"
    android:layout_marginStart="40dp"
    android:layout_marginTop="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/LLLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            >
            <ImageView
                android:id="@+id/checkOutClickBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_arrow_arrow"
                android:rotation="180"
                />
            <TextView
                android:id="@+id/checkOutClickTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Out"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                />



        </LinearLayout>

        <TextView
            android:id="@+id/tetetetet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LLLL"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="Payment"
            android:textColor="@color/blue"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rrrrrr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tetetetet"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/oayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/clearsans_regular"
                android:text="Payment Method"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/oayment"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >



                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <RadioButton
                        android:id="@+id/cashRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:textSize="14sp" />
                    <RadioButton
                        android:id="@+id/cardRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>


                </RadioGroup>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/money"
                                    android:rotation="180"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:text="Cash"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:gravity="bottom"
                            android:fontFamily="@font/clearsans_regular"
                            android:layout_marginStart="15dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"

                        >


                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/credit_card"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Card"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:fontFamily="@font/clearsans_regular"
                            android:layout_marginStart="15dp"
                            android:layout_gravity="center_vertical"
                            />

                    </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <TextView
            android:id="@+id/ttttttttt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rrrrrr"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Delivery method."
            android:textColor="@color/blue"
            android:textSize="16sp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/radioLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ttttttttt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <RadioButton
                        android:id="@+id/checkout2_doorRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/checkout2pickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        />
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <EditText
                        android:id="@+id/cehckout2_doorEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:backgroundTint="@color/red"
                        android:editable="false"
                        android:enabled="false"
                        android:text="Door delivery"
                        android:layout_marginEnd="10dp"
                        android:paddingVertical="15dp"
                        android:paddingStart="8dp"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/blue"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Pic Up"
                        android:textColor="@color/blue"
                        android:paddingStart="8dp"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        />

                </LinearLayout>
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="TOTAL"
            android:layout_below="@id/radioLayout"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/checkoutPriceTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:text="200 JD"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/proceed_to_payment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkoutPriceTotal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/splash_btn_background"
            android:text="Proceed to payment"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>
</ScrollView>