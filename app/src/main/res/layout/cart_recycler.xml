<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/cartRelativeParent"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cartCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="13dp"
        android:layout_marginEnd="20dp"

        >

        <ImageView
            android:id="@+id/cartImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/womanitems1" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_below="@id/cartCard"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/transparent"
        >

        <TextView
            android:id="@+id/cartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Woman jacket"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cartCounterText"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/ImageLinear"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/number_background"
            android:fontFamily="@font/clearsans_bold"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/cartPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartName"
            android:layout_marginTop="5dp"
            android:text="15"
            android:textColor="@color/blue"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cartPriceText"
            android:text="JD"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ImageLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"

            >


            <ImageButton
                android:id="@+id/cartPlusImageBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/plus" />

            <ImageButton
                android:id="@+id/cartDelImageBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/del" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
